# ── Required ──────────────────────────────────────────────
DATABASE_URL=postgresql://user:password@localhost:5432/waste_management
SESSION_SECRET=generate-a-random-64-char-hex-string
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your_admin_password_here

# ── Stripe ────────────────────────────────────────────────
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

# ── Google OAuth (client + team portal login) ─────────────
GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id_here
GOOGLE_OAUTH_CLIENT_SECRET=your_google_oauth_client_secret_here

# ── Google Maps (address autocomplete) ────────────────────
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# ── Gemini AI (support chatbot) ───────────────────────────
GEMINI_API_KEY=your_gemini_api_key_here

# ── OptimoRoute (pickup scheduling) ──────────────────────
OPTIMOROUTE_API_KEY=your_optimoroute_api_key_here

# ── Encryption (bank account data at rest) ────────────────
ENCRYPTION_KEY=generate-a-random-32-char-string

# ── Gmail (email notifications) ──────────────────────────
# Option A: Service account
GMAIL_SERVICE_ACCOUNT_JSON={"type":"service_account",...}
GMAIL_SENDER_EMAIL=noreply@yourdomain.com
# Option B: OAuth refresh token
# GMAIL_REFRESH_TOKEN=your_refresh_token_here

# ── Domain / CORS ───────────────────────────────────────
ALLOWED_ORIGINS=http://localhost:5000
APP_DOMAIN=http://localhost:5000
# In production, set both to your public URL:
# ALLOWED_ORIGINS=https://yourdomain.com
# APP_DOMAIN=https://yourdomain.com
