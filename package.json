{
  "name": "waste-management-portal",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "npx tsx server/index.ts & stripe listen --forward-to localhost:3001/api/stripe/webhook & vite",
    "dev:frontend": "vite",
    "dev:backend": "npx tsx server/index.ts",
    "dev:stripe": "stripe listen --forward-to localhost:3001/api/stripe/webhook",
    "seed": "npx tsx server/seed-products.ts",
    "build": "vite build",
    "preview": "vite preview",
    "stop": "npx kill-port 5000 || true",
    "start": "NODE_ENV=production npx tsx server/index.ts",
    "restart": "npm run stop && npm run start",
    "deploy": "bash deploy.sh",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@google/genai": "^1.29.0",
    "@googleapis/gmail": "^16.1.1",
    "@stripe/react-stripe-js": "^5.6.0",
    "@stripe/stripe-js": "^8.7.0",
    "@tailwindcss/vite": "^4.1.18",
    "@types/bcrypt": "^6.0.0",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/express-session": "^1.18.2",
    "@types/helmet": "^4.0.0",
    "@types/multer": "^2.0.0",
    "@types/pg": "^8.16.0",
    "@types/ws": "^8.18.1",
    "bcrypt": "^6.0.0",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.19.0",
    "google-auth-library": "^10.6.1",
    "helmet": "^8.1.0",
    "multer": "^2.0.2",
    "pg": "^8.18.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "stripe": "^20.3.1",
    "stripe-replit-sync": "^1.0.0",
    "tailwindcss": "^4.1.18",
    "twilio": "^5.12.2",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@types/supertest": "^6.0.3",
    "@vitejs/plugin-react": "^5.0.0",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vitest": "^4.0.18"
  }
